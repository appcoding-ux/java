package ex01;

public class Hello {

	public static void main(String[] args) {
		
		int exam = 4000;
		
		int hour, min, second;
		
		hour = exam / 3600;
		
		System.out.println(hour);
		
		min = (exam / 60) - 60;
		
		System.out.println(min);
		
		second = exam % 60;
		
		System.out.println(second);
	}
}